<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SARD.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="SARD.Views.About"
        xmlns:resx="clr-namespace:SARD.Resources"
        mc:Ignorable="d"
        ResizeMode="NoResize" ShowInTaskbar="False"
        Title="About" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TextBlock x:Name="TextBlock_ApplicationTitle" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Terminal NEXT" VerticalAlignment="Top" FontSize="24" FontFamily="Yu Gothic" Margin="10"/>
        <ui:TextBox x:Name="TextBox_Description" Grid.Row="1" IsReadOnly="True"/>
        <ui:Button x:Name="button" Content="OK" Margin="10" Grid.Row="2" VerticalAlignment="Top" Click="Button_Ok_Click" Appearance="Primary" HorizontalAlignment="Right"/>
    </Grid>
</Window>
